{
    "name": "outputs/mistral_2x2_maze",

    "type": "Mistral",

    "save_dir": "outputs/mistral_2x2_maze/",
    "peft_model": true,
    
    "bits_and_bytes": {
        "load_in_4bit": true,
        "bnb_4bit_quant_type": "nf4",
        "bnb_4bit_compute_dtype": "torch.bfloat16"
    },

    "generate" : {
        "max_new_tokens": 256,
        "do_sample": false
    },

    "train" : {
        "num_train_epochs": 10,
        "lr_scheduler_type": "constant",
        "learning_rate": 5e-5
    }
}