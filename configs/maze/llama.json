{
    "name": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",

    "type": "TinyLlama",

    "save_dir": "outputs/llama_2x2_maze/",

    "bits_and_bytes": {
        "load_in_4bit": true,
        "bnb_4bit_quant_type": "nf4",
        "bnb_4bit_compute_dtype": "torch.bfloat16"
    },

    "generate" : {
        "max_new_tokens": 256,
        "do_sample": false
    },

    "train" : {
        "num_train_epochs": 3,
        "learning_rate": 2e-4
    }
}